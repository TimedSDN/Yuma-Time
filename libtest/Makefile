# Makefile for libtest entire directory
#  
#   very top libtest directory

# BUILD VARIABLES
#
# DEVELOPER=1 : USED FOR debian yuma-dev package

##################### LIBRARIES ########################
#
# DIRS:  
# This is an ordered list
# Put only the directories that build object files in the list

# make all targets
DIRS = src


ifndef PREFIX
    PREFIX=/usr
endif

SRC_INST=$(DESTDIR)$(PREFIX)/share/yuma/src/libtest
#SRC_INST=/home/netconf/OpenYuma-master/libtest

#################### PLATFORM DEFINITIONS ############
all: testall


################################ MAKE RULES #################################
#

clean: testclean

superclean: testsuperclean

distclean: testsuperclean

ifdef DEBIAN
ifdef DEVELOPER
install: testinstall
else
install: libinstall
endif  # DEVELOPER
else
install: testinstall libinstall
endif  # DEBIAN

testall:
	mkdir -p lib bin
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) && cd ..;\
        done

testclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) clean && cd ..;\
        done

testsuperclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) superclean && cd ..;\
        done

libinstall:
	for dir in $(DIRS); do\
          cd $$dir && $(MAKE) install && cd ..;\
        done

testinstall:
	mkdir -p $(SRC_INST)
	mkdir -p $(SRC_INST)/src
	mkdir -p $(SRC_INST)/lib
	mkdir -p $(SRC_INST)/bin
	cp Makefile $(SRC_INST)
	cp src/*start $(SRC_INST)/src/
	cp src/*c $(SRC_INST)/src/
	cp src/*h $(SRC_INST)/src/
	cp src/Makefile $(SRC_INST)/src/


.PHONY: all clean superclean install libinstall \
	testall testclean testsuperclean testinstall distclean


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



